<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="actionMenuTextColor">#FFFFFF</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>

    <style name="MenuText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ItemText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="TitleText" parent="@android:style/TextAppearance">
    <item name="android:textColor">#000000</item>
    <item name="android:textSize">16sp</item>
    <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="LittleText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#4b000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="ContentText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/colorWhite</item>
    </style>



</resources>
